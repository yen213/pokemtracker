{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  }
}
